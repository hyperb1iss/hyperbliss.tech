{
  "name": "hyperbliss.tech",
  "version": "0.1.0",
  "description": "Stefanie's Personal Website",
  "author": "Stefanie Jane",
  "private": true,
  "scripts": {
    "prepare": "panda codegen",
    "dev": "panda codegen && tinacms dev -c \"next dev\"",
    "prebuild": "bash -c 'set -a; [ -f .env.local ] && source .env.local; set +a; if [ -n \"${NEXT_PUBLIC_TINA_CLIENT_ID}\" ] && [ -n \"${TINA_TOKEN}\" ]; then tinacms build --skip-search-index --skip-cloud-checks; else echo \"Skipping tinacms build (missing Tina credentials)\"; fi'",
    "build": "next build",
    "build:local": "tinacms build --local --skip-cloud-checks --skip-search-index && (tinacms dev --port 4001 --noWatch & sleep 1 && next build; kill $(lsof -t -i:4001) 2>/dev/null)",
    "start": "next start",
    "lint": "biome check . && prettier --check '**/*.{md,yml,yaml}'",
    "lint:all": "biome check --write --unsafe . && prettier --write '**/*.{md,yml,yaml}'",
    "lint:fix": "biome check --write . && prettier --write '**/*.{md,yml,yaml}'",
    "format": "biome format --write && prettier --write '**/*.{md,yml,yaml}'",
    "format:check": "biome format && prettier --check '**/*.{md,yml,yaml}'",
    "format:md": "prettier --write '**/*.md'",
    "format:yaml": "prettier --write '**/*.{yml,yaml}'",
    "check": "biome check && prettier --check '**/*.{md,yml,yaml}'",
    "ci": "biome ci && prettier --check '**/*.{md,yml,yaml}'",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:seo": "vitest run tests/seo",
    "test:seo:watch": "vitest tests/seo",
    "analyze": "node scripts/analyze-bundle.mjs",
    "analyze:keep": "node scripts/analyze-bundle.mjs --keep"
  },
  "dependencies": {
    "@tinacms/cli": "^2.0.6",
    "feed": "5.1.0",
    "framer-motion": "^12.23.24",
    "gl-matrix": "3.4.4",
    "gray-matter": "^4.0.3",
    "hast-util-to-string": "^3.0.1",
    "next": "^16.1.1",
    "nextjs-google-analytics": "^2.3.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-icons": "5.5.0",
    "react-markdown": "10.1.0",
    "rehype-highlight": "7.0.2",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "4.0.1",
    "tinacms": "^3.1.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@next/bundle-analyzer": "^16.0.7",
    "@pandacss/dev": "^1.7.3",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/hast": "^3.0.4",
    "@types/node": "24.10.1",
    "@types/react": "19.2.6",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "jsdom": "27.2.0",
    "playwright": "^1.56.1",
    "prettier": "3.6.2",
    "schema-dts": "^1.1.5",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3",
    "vitest": "^4.0.12"
  },
  "overrides": {
    "@types/react": "19.2.6",
    "@types/react-dom": "19.2.3"
  },
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "better-sqlite3",
      "esbuild",
      "sharp"
    ]
  }
}
