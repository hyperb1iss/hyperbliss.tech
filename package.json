{
  "name": "hyperbliss.tech",
  "version": "0.1.0",
  "description": "Stefanie's Personal Website",
  "author": "Stefanie Jane",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check . && prettier --check '**/*.{md,yml,yaml}'",
    "lint:all": "biome check --write --unsafe . && prettier --write '**/*.{md,yml,yaml}'",
    "lint:fix": "biome check --write . && prettier --write '**/*.{md,yml,yaml}'",
    "format": "biome format --write && prettier --write '**/*.{md,yml,yaml}'",
    "format:check": "biome format && prettier --check '**/*.{md,yml,yaml}'",
    "format:md": "prettier --write '**/*.md'",
    "format:yaml": "prettier --write '**/*.{yml,yaml}'",
    "check": "biome check && prettier --check '**/*.{md,yml,yaml}'",
    "ci": "biome ci && prettier --check '**/*.{md,yml,yaml}'",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:seo": "vitest run tests/seo",
    "test:seo:watch": "vitest tests/seo",
    "analyze": "node scripts/analyze-bundle.mjs",
    "analyze:keep": "node scripts/analyze-bundle.mjs --keep"
  },
  "dependencies": {
    "feed": "5.1.0",
    "framer-motion": "^11.15.0",
    "gl-matrix": "3.4.4",
    "gray-matter": "^4.0.3",
    "hast-util-to-string": "^3.0.1",
    "next": "^16.0.7",
    "next-seo": "6.8.0",
    "nextjs-google-analytics": "^2.3.7",
    "prismjs": "^1.30.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-icons": "5.5.0",
    "react-markdown": "10.1.0",
    "rehype-highlight": "7.0.2",
    "rehype-raw": "^7.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "4.0.1",
    "styled-components": "6.1.19"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@next/bundle-analyzer": "^16.0.7",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/lodash": "4.17.20",
    "@types/node": "24.3.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "babel-plugin-styled-components": "^2.1.4",
    "jsdom": "26.1.0",
    "prettier": "3.6.2",
    "schema-dts": "^1.1.5",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2"
  }
}
